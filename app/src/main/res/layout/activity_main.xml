<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/tvcol"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="#5b39c6"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_vector"
        android:drawableLeft="@drawable/ic_vector"
        android:padding="30dp"/>
    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginLeft="130dp"
        android:text="Add Buyer"/>
    <TextView
        android:id="@+id/tvorig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn1"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:textColor="@color/white"
        android:text="Origanisation name"/>
    <EditText
        android:id="@+id/etorgname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvorig"
        android:background="@drawable/ic_rectangle_1"
        android:layout_marginLeft="50dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tvcust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvcol"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:textColor="@color/black"
        android:text="Custmer name"/>
    <EditText
        android:id="@+id/etcustname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvcust"
        android:background="@drawable/ic_rectangle_1"
        android:layout_marginLeft="50dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tvmobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etcustname"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:textColor="@color/black"
        android:text="Mobile number"/>
    <EditText
        android:id="@+id/etnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvmobile"
        android:background="@drawable/ic_rectangle_1"
        android:layout_marginLeft="50dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tvemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etnumber"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:textColor="@color/black"
        android:text="Email"/>
    <EditText
        android:id="@+id/etmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvemail"
        android:background="@drawable/ic_rectangle_1"
        android:layout_marginLeft="50dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tvaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etmail"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:textColor="@color/black"
        android:text="Address"/>
    <EditText
        android:id="@+id/etadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvaddress"
        android:background="@drawable/ic_rectangle_1"
        android:layout_marginLeft="50dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tvtax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etadd"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:textColor="@color/black"
        android:text="Tax Id"/>
    <EditText
        android:id="@+id/ettaxid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvtax"
        android:background="@drawable/ic_rectangle_1"
        android:layout_marginLeft="50dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tvcompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ettaxid"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:textColor="@color/black"
        android:text="Company Id"/>
    <EditText
        android:id="@+id/etcomid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvcompany"
        android:background="@drawable/ic_rectangle_1"
        android:layout_marginLeft="50dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>





</RelativeLayout>